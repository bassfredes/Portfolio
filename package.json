{
  "name": "bassfredes-portfolio",
  "description": "A portfolio website for showcasing projects and skills, built with Next.js, Firebase Functions, and Tailwind CSS.",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings=0",
    "clean": "./scripts/cleanup.sh",
    "clean:firebase": "./scripts/cleanup.sh --firebase",
    "deploy": "firebase deploy --project bassfredes-portfolio --force",
    "deploy:hosting": "firebase deploy --only hosting --project bassfredes-portfolio"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "firebase-functions": "^7.0.0",
    "next": "16.0.6",
    "nodemailer": "^7.0.11",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.0.6",
    "eslint-plugin-security": "^3.0.1",
    "googleapis": "^166.0.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "node-forge": "1.3.2"
  }
}
