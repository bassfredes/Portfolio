{
  "name": "bassfredes-portfolio",
  "description": "A portfolio website for showcasing projects and skills, built with Next.js (Static Export) and Firebase Hosting.",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "npx serve out",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings=0",
    "clean": "./scripts/cleanup.sh",
    "clean:firebase": "./scripts/cleanup.sh --firebase",
    "deploy": "npm run build && firebase deploy --project bassfredes-portfolio",
    "deploy:hosting": "npm run build && firebase deploy --only hosting --project bassfredes-portfolio",
    "deploy:functions": "cd functions && npm run build && firebase deploy --only functions --project bassfredes-portfolio",
    "functions:install": "cd functions && npm install",
    "functions:build": "cd functions && npm run build"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "next": "^16.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-icons": "^5.5.0",
    "rehype-highlight": "^7.0.2",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "remark-rehype": "^11.1.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.2.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.6",
    "eslint-plugin-security": "^3.0.1",
    "firebase-tools": "^15.6.0",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "node-forge": "1.3.2",
    "tar": ">=7.5.7"
  }
}
